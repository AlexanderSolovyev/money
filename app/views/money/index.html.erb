<h1>Hello Money -))</h1>
<div class='row'>
  <div class='col-md-3'>
    <table class='table'>
      <% @cards.each do |card| %>
        <tr>
          <td><%= card.name %></td>
          <td><%= card.balance %></td>
        </tr>
        <% end %>
        <tr>
          <td><%= t('.totals')%></td>
          <td><%= @totals %>
      </tr>
    </table>
  </div>
</div>
<hr>
<div class='row'>
  <%= render 'trans/form' %>
  <div class='col-md-8'>
    <table class='table'>
      <tr>
        <td><%= link_to t('.trans'), trans_path %></td>
        <td><%= link_to t('.operations'), types_path %></td>
        <td></td>
        <td><%= link_to t('.cards'), cards_path %></td>
      </tr>
    <% @trans.each do |tran| %>
      <tr>
         <td><%= tran.date %></td>
         <td><%= tran.type.operation %></td>
         <td><%= tran.quality %></td>
         <td><%= tran.card.name %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>
