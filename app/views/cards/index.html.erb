<h1>Cards#show</h1>
<div class='col-md-4'>
<%= link_to 'New', new_card_path %>
<br />
<table class='table'>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.name %></td>
    <td><%= card.balance %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %>
        <%= link_to 'Destroy', card, method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to 'Back', root_path %>
</div>
